<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_background_color"
    android:padding="16dp">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:text="@string/mindful_moments"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMeditation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="@string/meditation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <Button
        android:id="@+id/buttonNatureSounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonMeditation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="@string/nature_sounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMeditation" />

    <Button
        android:id="@+id/buttonGratitudeJournal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonNatureSounds"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="@string/gratitude_journal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNatureSounds" />

    <ImageView
        android:id="@+id/imageViewSettings"
        android:layout_width="102dp"
        android:layout_height="106dp"
        android:layout_below="@+id/buttonGratitudeJournal"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewRegistration"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toEndOf="@+id/imageViewSettingsReminder"
        app:srcCompat="@drawable/settingreminder" />

    <ImageView
        android:id="@+id/imageViewRegistration"
        android:layout_width="113dp"
        android:layout_height="109dp"
        android:layout_below="@+id/buttonGratitudeJournal"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/setting" />

    <ImageView
        android:id="@+id/imageViewSettingsReminder"
        android:layout_width="106dp"
        android:layout_height="107dp"
        android:layout_below="@+id/buttonGratitudeJournal"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/remindersettings" />
        <FrameLayout
            android:id="@+id/fragmentContainerRegistration"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>